{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"types": ["next"],
		"paths": {
			"@/*": ["./src/*"],
			"@ui/*": ["../../packages/ui/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "theme.config.tsx", "scripts/build-known-issues.ts"],
	"exclude": ["node_modules"],
	"plugins": [
		{
			"name": "next"
		}
	]
}
