{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["next"],
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["../../packages/ui/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "theme.config.tsx",
    "scripts/build-known-issues.ts",
    ".next/types/**/*.ts",
    "next.config.js",
    "src/pages/guides/application-logging.mdx",
    "src/pages/ottofms-features/notifications.mdx"
  ],
  "exclude": ["node_modules"],
  "plugins": [
    {
      "name": "next"
    }
  ]
}
